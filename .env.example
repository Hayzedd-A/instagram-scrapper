# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/instagram-scraper
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/instagram-scraper

# Apify Configuration
APIFY_TOKEN=your_apify_token_here
# Get your token from: https://console.apify.com/account/integrations

# Instagram Scraper Actor ID (Apify's official Instagram scraper)
INSTAGRAM_SCRAPER_ACTOR_ID=apify/instagram-scraper

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
